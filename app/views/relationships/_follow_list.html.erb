<% if users != [] %>
  <% users.each do |user| %>
    <table>
      <thead>
        <tr>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <div class="friend-inner">
          <div class="frien-left">
            <% if user.image.present? %>
              <%= image_tag user.image, class: "header-image" %>
            <% else %>
              <%= image_tag ("noimage.jpg"), class: "header-image" %>
            <% end %>
            <div class="friend-spece">
              <%= user.nickname %>
              フォロー数: <%= user.followings.count %>
              フォロワー数: <%= user.followers.count %>
            </div>
          </div>
          <div class="frien-light">
            <% if current_user.following?(user) %>
              <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: :user__show__btn %>
            <% else %>
              <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: :user__show__btn %>
            <% end %>
          </div>
        </div>
      </tbody>
    </table>
  <% end %>
<% else %>
  <p>ユーザーはいません</p>
<% end %>

