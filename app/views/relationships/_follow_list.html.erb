<% if users != [] %>
  <% users.each do |user| %>
    <table>
      <thead>
        <tr>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr>
        <td>
          <% if user.image.present? %>
            <td><%= image_tag user.image, class: "header-image" %></td>
          <% else %>
            <td><%= image_tag ("noimage.jpg"), class: "header-image" %></td>
          <% end %>
          <td><%= user.nickname %></td>
          <td>フォロー数: <%= user.followings.count %></td>
          <td>フォロワー数: <%= user.followers.count %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
<% else %>
  <p>ユーザーはいません</p>
<% end %>

