<!DOCTYPE html>
<html>
  <head>
    <title>CAMP SQUARE</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.css">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <div class="inner">
        <div class="nav">
          <div class="nav__center">
            <%= link_to image_tag("camp_square_logo.png", class: :logo), root_path %>
          </div>
          <% if user_signed_in? %>
            <div class="nav__right">
              <%= "#{current_user.nickname}""さん" %>
              <% if current_user.image.present? %>
                <%= image_tag current_user.image, class: "header-image" %>
              <% else %>
                <%= image_tag ("noimage.jpg"), class: "header-image" %>
              <% end %>
              </div>
              <%= link_to "マイページ", "/users/#{current_user.id}", class: :nav__btn %>
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: :nav__btn %>
            </div>
          <% else %>
            <div class="nav__right">
              <%= link_to "ログイン", new_user_session_path, class: :nav__btn %>
              <%= link_to "新規登録", new_user_registration_path, class: :nav__btn %>
            </div>
          <% end %>
        </div>
      </div>
    </header>
    <%= yield %>
    <footer class="footer">
    <p class="copyright">Copyright © CAMP SQUARE All rights reserved.</p>
    </footer>
  </body>
</html>
